@model Emma.Models.Note

<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <form class="form-horizontal" method="post" asp-controller="Note" asp-action="Edit">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <lable>글 번호</lable>
                <input type="text" class="form-control" asp-for="NoteNo" placeholder="@Model.NoteNo" />
                <span class="text-danger" asp-validation-for="NoteTitle"></span>
            </div>
            <div class="form-group">
                <lable>제목</lable>
                <input type="text" class="form-control" asp-for="NoteTitle" placeholder="@Model.NoteTitle" />
                <span class="text-danger" asp-validation-for="NoteTitle"></span>
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="20" asp-for="NoteContents" placeholder="@Model.NoteContents"></textarea>
                <span class="text-danger" asp-validation-for="NoteContents"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">수정</button>
                <a class="btn btn-default" asp-controller="Note" asp-action="Index">취소</a>
            </div>
        </form>
    </div>
    <div class="col-lg-4"></div>
</div>